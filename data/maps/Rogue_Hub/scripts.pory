        msgbox(format("Here, let me get you started with a gift.\pI shall add Â¥500 to your ADVENTURE FUND out of my own pocket!"), MSGBOX_DEFAULT)
        setvar(VAR_ROGUE_ADVENTURE_MONEY, 500)
        playse(SE_SHOP)
