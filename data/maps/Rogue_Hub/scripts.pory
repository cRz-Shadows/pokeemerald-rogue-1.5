            case MULTI_B_PRESSED:
                setvar(VAR_RESULT, NO)
                msgbox(format("I see...\nYou know where I am, if you change your mind."), MSGBOX_DEFAULT)
        }

        if(var(VAR_RESULT) == YES)
        {
            checkmoney(500)
