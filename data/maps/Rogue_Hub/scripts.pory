    }
    else
    {
        message("Your fund currently has Â¥{STR_VAR_2}.\nWould you like to deposit another Â¥500?")
        waitmessage

        multichoice(20, 6, MULTI_YESNOINFO, NO)

        switch(var(VAR_RESULT))
        {
            case 0: // Yes
                setvar(VAR_RESULT, YES)

